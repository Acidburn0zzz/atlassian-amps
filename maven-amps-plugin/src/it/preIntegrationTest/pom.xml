<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.atlassian.amps.it</groupId>
    <artifactId>maven-amps-plugin-integration-test</artifactId>
    <version>testing</version>
    <name>TestPreIntegrationTest</name>
    <packaging>atlassian-plugin</packaging>

    <properties>
        <shitty.product>${shitty.product}</shitty.product>
        <!--<postgres.version>9.3-1102-jdbc4</postgres.version>-->
        <mysql.version>5.1.32</mysql.version>
        <oracle.version>11.2.0.2.0</oracle.version>
        <jtds.version>1.3.1</jtds.version>
        <jira.version>6.3</jira.version>
    </properties>
    <profiles>
        <profile>
            <id>jira-postgres</id>
            <properties>
                <dataSource.url>jdbc:postgresql://localhost:5432/jiradb</dataSource.url>
                <dataSource.user>amps_user</dataSource.user>
                <dataSource.password>amps_pass</dataSource.password>
                <dataSource.schema>public</dataSource.schema>
                <dataSource.driver>org.postgresql.Driver</dataSource.driver>
                <dataSource.jndi>jdbc/JiraDS</dataSource.jndi>
                <dataSource.defaultDatabase>jdbc:postgresql://localhost:5432/postgres</dataSource.defaultDatabase>
                <dataSource.systemUsername>postgres</dataSource.systemUsername>
                <dataSource.systemPassword>postgres</dataSource.systemPassword>
                <product>jira</product>
                <instanceId>jira-postgres</instanceId>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-${shitty.product}-plugin</artifactId>
                        <version>testing</version>
                        <extensions>true</extensions>
                        <configuration>
                            <dumpFilePath>${project.build.directory}/it/preIntegrationTest/target/classes/jira_63_postgres91_dump_pure_sql.sql</dumpFilePath>
                            <importMethod>SQL</importMethod>
                            <libArtifacts>
                                <libArtifact>
                                    <groupId>postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <version>${postgres.version}</version>
                                </libArtifact>
                            </libArtifacts>
                            <products>
                                <product>
                                    <instanceId>jira-postgres</instanceId>
                                    <version>${jira.version}</version>
                                    <output>${project.build.directory}/jira-postgres-${jira.version}.log</output>
                                    <dataSources>
                                        <dataSource>
                                            <jndi>${dataSource.jndi}</jndi>
                                            <url>${dataSource.url}</url>
                                            <driver>${dataSource.driver}</driver>
                                            <username>${dataSource.user}</username>
                                            <password>${dataSource.password}</password>
                                            <schema>${dataSource.schema}</schema>
                                            <defaultDatabase>${dataSource.defaultDatabase}</defaultDatabase>
                                            <systemUsername>${dataSource.systemUsername}</systemUsername>
                                            <systemPassword>${dataSource.systemPassword}</systemPassword>
                                        </dataSource>
                                    </dataSources>
                                </product>
                            </products>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>