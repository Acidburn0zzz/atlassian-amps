<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.atlassian.amps.it</groupId>
    <artifactId>maven-amps-plugin-pre-integration-test</artifactId>
    <version>testing</version>
    <name>Pre Integration Test</name>
    <profiles>
        <profile>
            <id>no-database-type</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-${shitty.product}-plugin</artifactId>
                        <version>testing</version>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <skipTests>true</skipTests>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>postgres</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-${shitty.product}-plugin</artifactId>
                        <version>testing</version>
                        <configuration>
                            <libArtifacts>
                                <libArtifact>
                                    <groupId>org.postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <version>${postgres.version}</version>
                                </libArtifact>
                            </libArtifacts>
                            <products>
                                <product>
                                    <instanceId>jira</instanceId>
                                    <version>6.3</version>
                                    <output>${project.build.directory}/jira-postgres-${jira.version}.log</output>
                                    <dataSources>
                                        <dataSource>
                                            <jndi>${dataSource.jndi}</jndi>
                                            <url>${dataSource.url}</url>
                                            <driver>${dataSource.driver}</driver>
                                            <username>${dataSource.user}</username>
                                            <password>${dataSource.password}</password>
                                            <schema>${dataSource.schema}</schema>
                                            <defaultDatabase>${dataSource.defaultDatabase}</defaultDatabase>
                                            <systemUsername>${dataSource.systemUsername}</systemUsername>
                                            <systemPassword>${dataSource.systemPassword}</systemPassword>
                                        </dataSource>
                                    </dataSources>
                                </product>
                            </products>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <properties>
        <shitty.product>${shitty.product}</shitty.product>
        <dataSource.url>jdbc:postgresql://localhost:5432/amps_test</dataSource.url>
        <dataSource.user>amps_user</dataSource.user>
        <dataSource.password>amps_pwd</dataSource.password>
        <dataSource.schema>public</dataSource.schema>
        <dataSource.driver>org.postgresql.Driver</dataSource.driver>
        <dataSource.jndi>jdbc/JiraDS</dataSource.jndi>
        <dataSource.defaultDatabase>jdbc:postgresql://localhost:5432/postgres</dataSource.defaultDatabase>
        <dataSource.systemUsername>postgres</dataSource.systemUsername>
        <dataSource.systemPassword>123456</dataSource.systemPassword>
        <product>jira</product>
    </properties>
</project>