<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>atlassian-plugin</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <generate-resources>
                                com.atlassian.maven.plugins:maven-crowd-plugin:copy-bundled-dependencies
                            </generate-resources>
                            <process-resources>
                                com.atlassian.maven.plugins:maven-crowd-plugin:compress-resources,
                                org.apache.maven.plugins:maven-resources-plugin:resources,
                                com.atlassian.maven.plugins:maven-crowd-plugin:filter-plugin-descriptor
                            </process-resources>
                            <compile>org.apache.maven.plugins:maven-compiler-plugin:compile</compile>
                            <process-classes>
                                com.atlassian.maven.plugins:maven-crowd-plugin:generate-manifest,
                                com.atlassian.maven.plugins:maven-crowd-plugin:generate-rest-docs
                            </process-classes>
                            <generate-test-resources>
                                com.atlassian.maven.plugins:maven-crowd-plugin:copy-test-bundled-dependencies
                            </generate-test-resources>
                            <process-test-resources>
                                org.apache.maven.plugins:maven-resources-plugin:testResources
                                ,com.atlassian.maven.plugins:maven-crowd-plugin:filter-test-plugin-descriptor
                                ,com.atlassian.maven.plugins:maven-crowd-plugin:generate-test-manifest
                            </process-test-resources>
                            <test-compile>org.apache.maven.plugins:maven-compiler-plugin:testCompile</test-compile>
                            <test>com.atlassian.maven.plugins:maven-crowd-plugin:unit-test</test>
                            <package>
                                com.atlassian.maven.plugins:maven-crowd-plugin:validate-manifest,
                                com.atlassian.maven.plugins:maven-crowd-plugin:jar,
                                com.atlassian.maven.plugins:maven-crowd-plugin:generate-obr-artifact,
                                com.atlassian.maven.plugins:maven-crowd-plugin:validate-test-manifest,
                                com.atlassian.maven.plugins:maven-crowd-plugin:test-jar
                            </package>
                            <integration-test>
                                com.atlassian.maven.plugins:maven-crowd-plugin:integration-test
                            </integration-test>
                            <install>com.atlassian.maven.plugins:maven-amps-plugin:install-no-jars</install>
                            <deploy>com.atlassian.maven.plugins:maven-amps-plugin:deploy-no-jars</deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>atlassian-plugin</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <type>atlassian-plugin</type>
                <includesDependencies>true</includesDependencies>
                <language>java</language>
                <extension>jar</extension>
                <addedToClasspath>true</addedToClasspath>
            </configuration>
        </component>
    </components>
</component-set>
