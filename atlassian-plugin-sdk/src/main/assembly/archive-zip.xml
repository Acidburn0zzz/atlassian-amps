<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!-- Maven -->
        <!-- want to chmod (u+x) the .sh files.  to do this we collect the files in seperate
             filesets so we can chmod just the .sh files. -->
        <fileSet>
            <directory>target/apache-maven-${bundled.maven.version}/</directory>
            <outputDirectory>apache-maven-${bundled.maven.version}</outputDirectory>
            <includes>
                <include>bin/mvn*</include>
            </includes>

            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/apache-maven-${bundled.maven.version}/</directory>
            <outputDirectory>apache-maven-${bundled.maven.version}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>bin/mvn*</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>NOTICE.txt</exclude>
                <exclude>README.txt</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/apache-maven-${bundled.maven.version}/</directory>
            <outputDirectory>apache-maven-${bundled.maven.version}/maven-docs</outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
                <include>NOTICE.txt</include>
                <include>README.txt</include>
            </includes>
        </fileSet>

        <!-- the repository -->
        <fileSet>
            <directory>target/repository</directory>
            <outputDirectory>repository</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- BAT files are not chmod +x to prevent autocomplete expansion on shell -->
        <fileSet>
            <directory>target/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*.bat</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>crlf</lineEnding>
        </fileSet>

        <!-- the install type for auto-update -->
        <fileSet>
            <directory>target/classes/zip</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>installtype.txt</include>
            </includes>
        </fileSet>

    </fileSets>


</assembly>
