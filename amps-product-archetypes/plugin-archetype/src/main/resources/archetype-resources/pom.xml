#set( $dollar = '$' )
<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>\${groupId}</groupId>
    <artifactId>\${artifactId}</artifactId>
    <version>\${version}</version>

    <organization>
        <name>Example Company</name>
        <url>http://www.example.com/</url>
    </organization>

    <name>\${artifactId}</name>
    <description>This is the \${groupId}:\${artifactId} plugin for Atlassian Products.</description>
    <packaging>atlassian-plugin</packaging>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-amps-plugin</artifactId>
                <version>\${dollar}{amps.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <products>
                        <product>
                            <id>jira</id>
                            <version>\${dollar}{jira.version}</version>
                        </product>
                        <product>
                            <id>confluence</id>
                            <version>\${dollar}{confluence.version}</version>
                        </product>
                        <product>
                            <id>fecru</id>
                            <version>\${dollar}{fecru.version}</version>
                        </product>
                        <product>
                            <id>bamboo</id>
                            <version>\${dollar}{bamboo.version}</version>
                        </product>
                        <product>
                            <id>refapp</id>
                            <version>\${dollar}{refapp.version}</version>
                        </product>
                    </products>
                    <instructions>
                        <!--
                            It is critical to provide correct plugin key (matches with the key atlassian-plugin.xml)
                              otherwise Atlassian Plugins system won't treat bundle as transformless plugin
                         -->
                        <Atlassian-Plugin-Key>${atlassian.plugin.key}</Atlassian-Plugin-Key>

                        <!-- Add package to export here -->
                        <Export-Package>
                            ${package},
                        </Export-Package>

                        <!-- Add pacakage import here -->
                        <Import-Package>
                            com.atlassian.sal.api;version="[2.7, 4.0)"
                        </Import-Package>

                        <!-- Spring context to be support inside plugin -->
                        <Spring-Context>*;timeout=60</Spring-Context>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdkLevel}</source>
                    <target>${jdkLevel}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <jira.version>${jira.version}</jira.version>
        <confluence.version>${confluence.version}</confluence.version>
        <fecru.version>${fecru.version}</fecru.version>
        <bamboo.version>${bamboo.version}</bamboo.version>
        <refapp.version>${refapp.version}</refapp.version>
        <amps.version>${project.version}</amps.version>
        <plugin.testrunner.version>${plugin.testrunner.version}</plugin.testrunner.version>
        <!-- This key is used to keep the consistency between the key in atlassian-plugin.xml and the key to generate bundle. -->
        <atlassian.plugin.key>\${project.groupId}.\${project.artifactId}</atlassian.plugin.key>
    </properties>

</project>
